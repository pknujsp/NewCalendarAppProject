<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/calendar_settings">
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/preference_key_use_default_timezone"
            android:title="@string/using_default_timezone" />

        <Preference
            android:fragment="com.zerodsoft.scheduleweather.activity.editevent.fragments.TimeZoneFragment"
            android:key="@string/preference_key_custom_timezone"
            android:title="@string/select_timezone" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/preference_key_show_week_of_year"
            android:title="@string/show_week_of_year" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/preference_key_show_canceled_instances"
            android:title="@string/show_canceled_instance" />

        <Preference
            android:key="@string/preference_key_timerange"
            android:summary="@string/summary_setting_default_daterange"
            android:title="@string/settings_default_timerange" />

        <Preference
            android:fragment="com.zerodsoft.scheduleweather.activity.preferences.fragments.CalendarColorFragment"
            android:key="@string/preference_key_calendar_color"
            android:summary="@string/summary_setting_color_of_calendar"
            android:title="@string/settings_color_of_calendar" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/preference_key_use_24_hour_system"
            android:title="@string/setting_hour_system" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/weather_settings">


    </PreferenceCategory>


    <PreferenceCategory
        android:key="@string/preference_key_places_settings_category"
        android:title="@string/places_settings">

        <Preference
            android:key="@string/preference_key_places_category"
            android:summary="@string/summary_setting_place_category"
            android:title="@string/setting_place_category" />
    </PreferenceCategory>
</PreferenceScreen>