<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/place_item_cardview_in_bottomsheet"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/place_item_cardview_corner_radius"
        app:cardElevation="3dp">

        <RelativeLayout
            android:id="@+id/map_place_item_rows"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <include
                android:id="@+id/place_layout"
                layout="@layout/place_item_view" />

            <include
                android:id="@+id/address_layout"
                layout="@layout/address_item_view" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <ImageButton
                    android:id="@+id/add_to_favorite_placeitem_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/favorite_disabled_icon" />

                <Button
                    android:id="@+id/select_this_place_button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@id/add_to_favorite_placeitem_button"
                    android:gravity="center"
                    android:text="@string/select" />

                <Button
                    android:id="@+id/unselect_this_place_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/select_this_place_button"
                    android:text="@string/cancel_location" />

                <TextView
                    android:id="@+id/place_item_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="100M"
                    android:textColor="@color/gray_600"
                    android:textSize="11sp" />

            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>