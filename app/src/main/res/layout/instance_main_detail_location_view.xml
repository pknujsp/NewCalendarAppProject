<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/detail_location_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/detail_location"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <include
        android:id="@+id/place_info_layout"
        layout="@layout/place_info_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <include
        android:id="@+id/address_info_layout"
        layout="@layout/address_info_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/selected_location_map"
        android:layout_width="match_parent"
        android:layout_height="140dp" />

</LinearLayout>