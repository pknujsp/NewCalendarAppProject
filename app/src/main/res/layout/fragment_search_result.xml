<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Activity.MapActivity.Fragment.SearchResultFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/search_result_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/location_toolbar"
            android:elevation="2dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/search_result_map_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/blue_button_shape"
                app:srcCompat="@drawable/map_white_icon" />

            <TextView
                android:id="@+id/search_result_searchword_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/search_result_close_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/white_button_shape"
                app:srcCompat="@drawable/close_icon" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/search_result_rescan_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/search_result_map_center_rescan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="8dp"
                android:text="@string/result_activity_map_center"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/search_result_myloc_center_rescan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/search_result_map_center_rescan"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="8dp"
                android:text="@string/result_activity_myloc_center"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/search_sort_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />


        </RelativeLayout>

        <com.zerodsoft.scheduleweather.Etc.ViewPagerIndicator
            android:id="@+id/search_result_view_pager_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            app:IndicatorSelectedDotDrawable="@drawable/selected_dot_indicator"
            app:IndicatorUnselectedDotDrawable="@drawable/unselected_dot_indicator" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/search_result_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible" />

    </LinearLayout>

</FrameLayout>