<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/day_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dayview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/dayview_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dayview_eventtotalnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textAlignment="center" />

            <ListView
                android:id="@+id/dayview_eventlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <com.zerodsoft.scheduleweather.calendarview.day.DayView
            android:id="@+id/dayview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:HoursEventsBackgroundColor="@android:color/white"
            app:HoursEventsEventTextSize="10sp"
            app:HoursEventsHourTextColor="@android:color/black"
            app:HoursEventsHourTextSize="@dimen/weekview_textsize"
            app:HoursEventsLineColor="@android:color/darker_gray"
            app:HoursEventsLineThickness="@dimen/line_thickness"
            app:HoursEventsNewScheduleRectColor="@android:color/holo_blue_dark"
            app:HoursEventsNewScheduleRectThickness="10dp" />

    </LinearLayout>

</FrameLayout>
