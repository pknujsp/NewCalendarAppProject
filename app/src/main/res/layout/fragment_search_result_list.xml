<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.map.fragment.searchresult.SearchResultListFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/map_search_result_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

    <com.zerodsoft.scheduleweather.etc.ViewPagerIndicator
        android:id="@+id/map_result_view_pager_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        app:IndicatorSelectedDotDrawable="@drawable/selected_dot_indicator"
        app:IndicatorUnselectedDotDrawable="@drawable/unselected_dot_indicator" />

</FrameLayout>