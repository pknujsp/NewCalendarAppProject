<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragment.NotificationFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <RadioGroup
            android:id="@+id/notification_type_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/notification_day_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification_type_day" />

            <RadioButton
                android:id="@+id/notification_hour_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification_type_hour" />

            <RadioButton
                android:id="@+id/notification_minute_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification_type_minute" />
        </RadioGroup>

        <RelativeLayout
            android:id="@+id/noti_day_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left">

            <TextView
                android:id="@+id/noti_day_value_textview"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/noti_day_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/noti_day_value_textview"
                android:text="일"
                android:textSize="14sp" />


            <ImageButton
                android:id="@+id/minus_noti_day_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/plus_noti_day_button"
                android:background="?attr/selectableItemBackground"
                android:scaleType="fitXY"
                android:src="@drawable/minus_icon" />

            <ImageButton
                android:id="@+id/plus_noti_day_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackground"
                android:scaleType="fitXY"
                android:src="@drawable/plus_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/noti_hour_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="8dp">


            <TextView
                android:id="@+id/noti_hour_value_textview"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/noti_hour_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/noti_hour_value_textview"
                android:text="시간"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/minus_noti_hour_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/plus_noti_hour_button"
                android:background="?attr/selectableItemBackground"
                android:scaleType="fitXY"
                android:src="@drawable/minus_icon" />

            <ImageButton
                android:id="@+id/plus_noti_hour_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackground"
                android:scaleType="fitXY"
                android:src="@drawable/plus_icon" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/noti_minute_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/noti_minute_value_textview"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/noti_minute_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/noti_minute_value_textview"
                android:text="분"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/minus_noti_minute_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/plus_noti_minute_button"
                android:background="?attr/selectableItemBackground"
                android:scaleType="fitXY"
                android:src="@drawable/minus_icon" />

            <ImageButton
                android:id="@+id/plus_noti_minute_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackground"
                android:scaleType="fitXY"
                android:src="@drawable/plus_icon" />


        </RelativeLayout>

        <TextView
            android:id="@+id/noti_result_value_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/noti_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:text="@string/cancel_button" />

            <Button
                android:id="@+id/noti_ok_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/blue_button_shape"
                android:text="@string/datepicker_ok_button"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>