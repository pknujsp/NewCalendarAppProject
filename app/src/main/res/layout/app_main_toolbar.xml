<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/open_navigation_drawer"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="@dimen/main_toolbar_margin"
        android:layout_marginTop="@dimen/main_toolbar_margin"
        android:layout_marginBottom="@dimen/main_toolbar_margin"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/toolbar_menu_icon" />

    <TextView
        android:id="@+id/calendar_month"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="@dimen/main_toolbar_margin"
        android:layout_marginTop="@dimen/main_toolbar_margin"
        android:layout_marginBottom="@dimen/main_toolbar_margin"
        android:layout_toRightOf="@id/open_navigation_drawer"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/add_schedule"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/main_toolbar_margin"
        android:layout_marginRight="@dimen/main_toolbar_margin"
        android:layout_marginBottom="@dimen/main_toolbar_margin"
        android:layout_toLeftOf="@id/go_to_today"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/add_schedule" />

    <ImageButton
        android:id="@+id/go_to_today"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_toolbar_margin"
        android:layout_marginRight="@dimen/main_toolbar_margin"
        android:layout_marginBottom="@dimen/main_toolbar_margin"
        android:layout_toLeftOf="@id/refresh_calendar"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/today_icon" />

    <ImageButton
        android:id="@+id/refresh_calendar"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_toolbar_margin"
        android:layout_marginRight="@dimen/main_toolbar_margin"
        android:layout_marginBottom="@dimen/main_toolbar_margin"
        android:layout_toLeftOf="@id/calendar_type"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/refresh_icon" />

    <ImageButton
        android:id="@+id/calendar_type"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/main_toolbar_margin"
        android:layout_marginEnd="@dimen/main_toolbar_margin"
        android:layout_marginBottom="@dimen/main_toolbar_margin"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/icon_calendar_type" />

</RelativeLayout>
