<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/open_navigation_drawer"
        android:layout_width="@dimen/toolbar_image_size"
        android:layout_height="@dimen/toolbar_image_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/toolbar_start_end_margin"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/toolbar_menu_icon" />

    <LinearLayout
        android:id="@+id/month_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/toolbar_page_title_margin"
        android:layout_toRightOf="@id/open_navigation_drawer"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/calendar_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="2020/9"
            android:textColor="@color/light_blue_600"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/assistant_calendar_control_img"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:src="@drawable/expand_more_icon" />

    </LinearLayout>

    <TextView
        android:id="@+id/open_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/month_layout"
        android:background="?attr/selectableItemBackground"
        android:gravity="left"
        android:text="@string/show_as_list"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/add_schedule"
        android:layout_width="@dimen/toolbar_image_size"
        android:layout_height="@dimen/toolbar_image_size"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/toolbar_left_right_margin"
        android:layout_toLeftOf="@id/go_to_today"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/add_schedule" />

    <ImageButton
        android:id="@+id/go_to_today"
        android:layout_width="@dimen/toolbar_image_size"
        android:layout_height="@dimen/toolbar_image_size"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/toolbar_left_right_margin"
        android:layout_toLeftOf="@id/refresh_calendar"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/today_icon" />

    <ImageButton
        android:id="@+id/refresh_calendar"
        android:layout_width="@dimen/toolbar_image_size"
        android:layout_height="@dimen/toolbar_image_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/toolbar_start_end_margin"
        android:background="@color/transparent"
        android:src="@drawable/refresh_icon" />

</RelativeLayout>
