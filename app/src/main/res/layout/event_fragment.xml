<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".event.ScheduleInfoFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/event_title"
                    style="@style/TextAppearance.MaterialComponents.Headline4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:id="@+id/event_calendar_layout"
                    style="@style/Event.ItemLayout"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/Event.Label"
                        app:srcCompat="@drawable/calendar_black" />

                    <include
                        android:id="@+id/event_calendar_view"
                        layout="@layout/event_calendar_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/event_datetime_layout"
                    style="@style/Event.ItemLayout"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/Event.Label"
                        app:srcCompat="@drawable/time_black" />

                    <include
                        android:id="@+id/event_datetime_view"
                        layout="@layout/event_datetime_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/event_recurrence_layout"
                    style="@style/Event.ItemLayout"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/Event.Label"
                        app:srcCompat="@drawable/recurrence_black" />

                    <TextView
                        android:id="@+id/event_recurrence"
                        style="@style/Event.Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/not_recurrence" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/event_reminder_layout"
                    style="@style/Event.ItemLayout"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/Event.Label"
                        app:srcCompat="@drawable/alarm_black" />

                    <TextView
                        android:id="@+id/event_reminder"
                        style="@style/Event.Value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/not_reminder" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/event_attendees_layout"
                    style="@style/Event.ItemLayout"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/Event.Label"
                        app:srcCompat="@drawable/attendees_black" />

                    <include
                        layout="@layout/event_attendees_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/event_description_layout"
                    style="@style/Event.ItemLayout"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/Event.Label"
                        app:srcCompat="@drawable/description_black" />

                    <TextView
                        android:id="@+id/event_description"
                        style="@style/Event.Value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/not_description" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/event_location_layout"
                    style="@style/Event.ItemLayout"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/Event.Label"
                        app:srcCompat="@drawable/location_black" />

                    <TextView
                        android:id="@+id/event_location"
                        style="@style/Event.Value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/not_location" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/event_access_level_layout"
                    style="@style/Event.ItemLayout"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/Event.Label"
                        app:srcCompat="@drawable/accesslevel_black" />

                    <TextView
                        android:id="@+id/event_access_level"
                        style="@style/Event.Value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/accesslevel" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/event_availability_layout"
                    style="@style/Event.ItemLayout"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/Event.Label"
                        app:srcCompat="@drawable/availability_black" />

                    <TextView
                        android:id="@+id/event_availability"
                        style="@style/Event.Value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/availability" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>
</layout>
