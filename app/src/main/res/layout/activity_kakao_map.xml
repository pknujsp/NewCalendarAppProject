<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".kakaomap.KakaoMapActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <include
                android:id="@+id/map_search_toolbar"
                layout="@layout/map_search_toolbar" />

        </com.google.android.material.appbar.AppBarLayout>

        <fragment
            android:id="@+id/kakao_map_fragment"
            android:name="com.zerodsoft.scheduleweather.activity.map.fragment.map.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_anchor="@id/bottom_sheet"
            app:layout_anchorGravity="top"
            app:layout_dodgeInsetEdges="bottom" />

        <include
            android:id="@+id/bottom_sheet"
            layout="@layout/map_bottom_sheet_view" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>