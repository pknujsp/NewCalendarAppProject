<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TravelScheduleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#00FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_curr_travel_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_refresh_data"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:drawableStart="@drawable/check_icon"
            android:gravity="center_vertical"
            android:text="갱신"
            android:textAlignment="textStart"
            android:textSize="12sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_travel_schedule"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        tools:listitem="@layout/recycler_view_schedule_item" />
</LinearLayout>