<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="bottom"
    android:clickable="false">

    <ImageButton
        android:id="@+id/favorite_locations_button"
        android:layout_width="@dimen/map_button_size"
        android:layout_height="@dimen/map_button_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="4dp"
        android:background="@drawable/map_button_rect"
        android:elevation="3dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/more_icon" />

    <ImageButton
        android:id="@+id/building_button"
        android:layout_width="@dimen/map_button_size"
        android:layout_height="@dimen/map_button_size"
        android:layout_below="@id/favorite_locations_button"
        android:layout_alignLeft="@id/favorite_locations_button"
        android:layout_marginTop="4dp"
        android:background="@drawable/map_button_rect"
        android:elevation="3dp"
        android:padding="6dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/building_black" />


    <ImageButton
        android:id="@+id/zoom_in_button"
        android:layout_width="@dimen/map_button_size"
        android:layout_height="@dimen/map_button_size"
        android:layout_below="@id/building_button"
        android:layout_alignLeft="@id/building_button"
        android:layout_marginTop="28dp"
        android:background="@drawable/map_button_rect"
        android:elevation="3dp"
        android:src="@drawable/zoom_in_icon" />

    <ImageButton
        android:id="@+id/zoom_out_button"
        android:layout_width="@dimen/map_button_size"
        android:layout_height="@dimen/map_button_size"
        android:layout_below="@id/zoom_in_button"
        android:layout_alignLeft="@id/zoom_in_button"
        android:layout_marginTop="4dp"
        android:background="@drawable/map_button_rect"
        android:elevation="3dp"
        android:src="@drawable/zoom_out_icon" />

    <ImageButton
        android:id="@+id/gps_button"
        android:layout_width="@dimen/map_button_size"
        android:layout_height="@dimen/map_button_size"
        android:layout_below="@id/zoom_out_button"
        android:layout_alignLeft="@id/zoom_in_button"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/map_button_rect"
        android:elevation="3dp"
        android:src="@drawable/gps_not_fixed_icon" />


    <TextView
        android:id="@+id/current_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/gps_button"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:background="@drawable/map_view_background"
        android:elevation="3dp"
        android:paddingLeft="6dp"
        android:maxLines="1"
        android:minLines="1"
        android:paddingTop="4dp"
        android:paddingRight="6dp"
        android:paddingBottom="4dp"
        android:text="address"
        android:textColor="@color/black"
        android:textSize="13sp" />


</RelativeLayout>