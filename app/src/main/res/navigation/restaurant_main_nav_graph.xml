<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/restaurant_main_nav_graph"
    app:startDestination="@id/foodsMenuListFragment">

    <fragment
        android:id="@+id/foodsMenuListFragment"
        android:name="com.zerodsoft.scheduleweather.event.foods.main.FoodsMenuListFragment"
        android:label="FoodsMenuListFragment"
        tools:layout="@layout/fragment_foods_category_list">
        <action
            android:id="@+id/action_foodsMenuListFragment_to_restaurantListTabFragment"
            app:destination="@id/restaurantListTabFragment" />
        <argument
            android:name="iMapPoint"
            app:argType="com.zerodsoft.scheduleweather.navermap.interfaces.IMapPoint" />

        <argument
            android:name="favoriteLocationsListener"
            app:argType="com.zerodsoft.scheduleweather.navermap.interfaces.FavoriteLocationsListener" />
        <argument
            android:name="foodMenuChipsViewController"
            app:argType="com.zerodsoft.scheduleweather.event.foods.interfaces.FoodMenuChipsViewController" />
        <argument
            android:name="eventId"
            app:argType="long" />
        <action
            android:id="@+id/action_foodsMenuListFragment_to_restaurantCriteriaLocationSettingsFragment"
            app:destination="@id/restaurantCriteriaLocationSettingsFragment" />

    </fragment>

    <fragment
        android:id="@+id/restaurantListTabFragment"
        android:name="com.zerodsoft.scheduleweather.event.foods.main.RestaurantListTabFragment"
        android:label="RestaurantListTabFragment"
        tools:layout="@layout/fragment_food_category_tab">

        <argument
            android:name="foodMenuName"
            app:argType="string"
            app:nullable="false" />
        <action
            android:id="@+id/action_restaurantListTabFragment_to_foodsMenuListFragment"
            app:destination="@id/foodsMenuListFragment" />
        <argument
            android:name="eventId"
            app:argType="long" />
        <argument
            android:name="FoodMenuChipsViewController"
            app:argType="com.zerodsoft.scheduleweather.event.foods.interfaces.FoodMenuChipsViewController" />
        <argument
            android:name="favoriteLocationsListener"
            app:argType="com.zerodsoft.scheduleweather.navermap.interfaces.FavoriteLocationsListener" />
    </fragment>
    <fragment
        android:id="@+id/restaurantCriteriaLocationSettingsFragment"
        android:name="com.zerodsoft.scheduleweather.event.foods.criterialocation.RestaurantCriteriaLocationSettingsFragment"
        android:label="RestaurantCriteriaLocationSettingsFragment">
        <argument
            android:name="eventId"
            app:argType="long" />
        <action
            android:id="@+id/action_restaurantCriteriaLocationSettingsFragment_to_foodsMenuListFragment"
            app:destination="@id/foodsMenuListFragment" />
    </fragment>


</navigation>